<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:background="#E6E6E6"
            android:layout_width="match_parent"
            android:text="Issue Tracker"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:text="Choose account"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/spnTrackerLoginAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:text="Enter Name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:maxLines="1"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:gravity="start"
            android:id="@+id/edtTrackerIssueName"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:text="Enter phone number"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:maxLines="1"
            android:inputType="number"
            android:hint="Phone number"
            android:gravity="start"
            android:id="@+id/edtTrackerIssuePhone"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:text="Enter Issue"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:minLines="4"
            android:gravity="start"
            android:id="@+id/edtTrackerLoginIssue"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="end"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnIssueLoginCancel"
                android:layout_width="wrap_content"
                android:text="Cancel"
                android:textColor="@color/white"
                android:background="@drawable/button_cancel"
                android:layout_height="match_parent" />
            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/btnIssueLoginSend"
                android:layout_width="wrap_content"
                android:text="Submit"
                android:textColor="@color/white"
                android:background="@drawable/button_login"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>