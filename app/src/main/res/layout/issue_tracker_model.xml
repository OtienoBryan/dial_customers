<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:text="Issue Tracker"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:text="Choose issue"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/spnTrackerAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:text="Enter Issue"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/border_edit_text"
        android:layout_width="match_parent"
        android:minLines="2"
        android:gravity="start"
        android:id="@+id/edtTrackerIssue"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:text="Enter name of recipient"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/border_edit_text"
        android:layout_width="match_parent"
        android:gravity="start"
        android:inputType="textPersonName"
        android:id="@+id/edtTrackerName"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:text="Enter email of recipient"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/border_edit_text"
        android:layout_width="match_parent"
        android:gravity="start"
        android:inputType="textEmailAddress"
        android:id="@+id/edtTrackerEmail"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnIssueCancel"
            android:layout_width="wrap_content"
            android:text="Cancel"
            android:textColor="@color/white"
            android:background="@drawable/button_cancel"
            android:layout_height="match_parent" />
        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btnIssueSend"
            android:layout_width="wrap_content"
            android:text="Submit"
            android:textColor="@color/white"
            android:background="@drawable/button_login"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>