<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginTop="@dimen/activity_horizontal_margin" style="@style/activity"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText android:id="@+id/shelfsize"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Shelf Size" />
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button android:id="@+id/cancelShelfSizeUpdate"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_weight="1.0" style="@style/bluebuttons" />
        <Button android:id="@+id/updateShelfSize"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_weight="1.0" style="@style/bluebuttons" />
    </LinearLayout>
</LinearLayout>